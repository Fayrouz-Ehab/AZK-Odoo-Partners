<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_azk_partner_list" model="ir.ui.view">
            <field name="name">azk_partner_list</field>
            <field name="model">azk.partner</field>
            <field name="arch" type="xml">

                <list>
                    <field name="name"/>
                    <field name="country_id"/>
                    <field name="first_seen_on"/>
                    <field name="retention_rate"/>
                    <field name="total_references_count"/>
                    <field name="largest_project_size"/>
                    <field name="average_project_size"/>
                    <field name="to_reprocess_references"/>
                    <field name="status_history_ids"/>
                    <field name="reference_ids" />
                </list>
            </field>
        </record>

        <record id="view_azk_partner_form" model="ir.ui.view">
            <field name="name">azk.partner.form</field>
            <field name="model">azk.partner</field>
            <field name="arch" type="xml">
                <form string="Partner">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="partner_url"/>
                                <field name="country_id"/>
                                <field name="current_status"/>
                                <field name="first_seen_on"/>
                            </group>
                            <group>
                                <field name="retention_rate"/>
                                <field name="total_references_count"/>
                                <field name="largest_project_size"/>
                                <field name="average_project_size"/>
                                <field name="to_reprocess_references"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Status History">
                                <field name="status_history_ids" mode="list,form">
                                    <list string="Status History">
                                        <field name="previous_status"/>
                                        <field name="new_status"/>
                                        <field name="change_date"/>
                                        <field name="change_type"/>
                                    </list>
                                    <form>
                                        <group>
                                            <field name="change_date"/>
                                            <field name="change_type"/>
                                            <field name="new_status" nolabel="1"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            
                            <page string="References">
                                <field name="reference_ids" mode="list,form">
                                    <list string="References">
                                        <field name="name"/>
                                        <field name="is_active"/>
                                        <field name="added_on"/>
                                        <field name="removed_on"/>
                                    </list>
                                    <form>
                                        <group>
                                            <field name="name"/>
                                            <field name="is_active"/>
                                            <field name="added_on"/>
                                            <field name="removed_on"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_azk_odoo_scrape_partners" model="ir.actions.act_window">
            <field name="name"> Odoo Partners</field>
            <field name="res_model">azk.partner</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">list,form</field>
        </record>
        <record id="action_scrape_partners" model="ir.actions.server">
            <field name="name">Scrape Partners</field>
            <field name="model_id" ref="model_azk_partner"/>
            <field name="state">code</field>
            <field name="binding_model_id" ref="model_azk_partner"/> 
            <field name="binding_view_types">list</field> 
            <field name="code">model.scrape_partners_lebanon()</field>
        </record>

        <menuitem id="menu_azk_odoo_spartners"
            sequence="3"
            parent="menu_azk_odoo_scrape_partners_root"
            name="Partners"
            action="action_azk_odoo_scrape_partners"/>


        <menuitem id="menu_azk_odoo_scrape_partners_root"
            sequence="3"
            name="Odoo Partners"
            action="action_azk_odoo_scrape_partners"
            web_icon="azk_odoo_partner_monitor,static/src/description/images.png"/>
       
    </data>
</odoo>